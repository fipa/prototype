<h1>Listing gifts</h1>

<table>
  <tr>
    <th>Name</th>
    <th>User</th>
    <th>Date</th>
    <th>Min price</th>
    <th>Max price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @gifts.each do |gift| %>
  <tr>
    <td><%= gift.name %></td>
    <td><%= gift.user_id %></td>
    <td><%= gift.date %></td>
    <td><%= gift.min_price %></td>
    <td><%= gift.max_price %></td>
    <td><%= link_to 'Show', gift %></td>
    <td><%= link_to 'Edit', edit_gift_path(gift) %></td>
    <td><%= link_to 'Destroy', gift, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

