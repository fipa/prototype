<table class="offer">
  <tr>
    <td class="image" rowspan="3"><%= link_to image_tag(offer.product_image_url, :width => 100, :height => 100), offer %></td>
  </tr>

  <tr>
    <td class="description" colspan="4"><%= link_to offer.product_description, offer %></td>
  </tr>

  <tr>
    <td class="offer_price">Oferta a <%= standard_price_format(offer.price) %></td>
    <td rowspan="2"><%= link_to image_tag('comprar.jpg'), new_purchase_path(offer.id) %></td>
  </tr>

  <tr>
    <td><%= percentage_format(offer.discount_percentage) %></td>
    <td class="regular_price"><%= standard_price_format(offer.regular_price) %></td>
  </tr>

  <tr>
    <td class="small">Descuento</td>
    <td class="small">Precio normal</td>
  </tr>
     
  
  
</table>