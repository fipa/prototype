<div class="offer">
  <div class="description"><%= link_to offer.product_description, offer %></div>
  <div class="price"><%= standard_price_format(offer.price) %>, Precio referencia <%= standard_price_format(offer.regular_price) %></div>
  <div class="image"><%= link_to image_tag(offer.product_image_url, :width => 100, :height => 100), offer %></div>
  <div class="buy"><%= link_to 'Comprar', new_purchase_path(offer.id) %></div>
</div>